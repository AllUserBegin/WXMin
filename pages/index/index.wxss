 .menu {
   display: flex;
   flex-wrap: wrap;
   border-bottom: 1px solid gainsboro;
   margin-top: 10px;
 }

 .menu-item {
   width: 20%;
   padding: 5px;
   display: flex;
   box-sizing: border-box;
   justify-self: center;
   flex-direction: column;
 }

 .menu-img {
   width: 60%;
   align-self: center;
 }

 .menu-mc {
   font-size: 14px;
   align-self: center;
 }

 .qukuai {
